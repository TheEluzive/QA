        <parameter name="dataFile" value="src/main/resources/NewUser.json"/>

        <classes>

            <class name="Test.VerifyAdressesTest">
                <methods>
                    <include name="checkAdressesTest"/>
                </methods>
            </class>
            <class name="Test.VerifyPersonalInformationTest">
