                    <include name="verifyPersonalInformationTest"/>
                </methods>
            </class>
            <class name="Test.EditAdressesTest">
                <methods>
                    <include name="editAdressesTest"/>
                </methods>
            </class>
            <class name="Test.EditPersonalInformationTest">
                <methods>
                    <include name="editPersonalInformationTest"/>
                </methods>
            </class>

        </classes>
